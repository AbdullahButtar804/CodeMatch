<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeMatch.Views.VerfyCodePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" >
            <Label Text="Enter code to play"></Label>
            <Entry Placeholder="enter code here" Text="{Binding Code}"></Entry>
            </StackLayout>
            <Button Text="Next" Command="{Binding GoToNextPageCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>